<div class="grid place-items-center">
<h1 class="text-2xl font-bold mb-8">My foods</h1>
<div class="relative overflow-x-auto sm:rounded-lg">
<table class="w-80 text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">Food</th>
        <th scope="col" class="px-6 py-3">Measurement unit</th>
        <th scope="col" class="px-6 py-3">Price</th>
        <th scope="col" class="px-6 py-3">Quantity</th>
        <th scope="col" class="px-6 py-3">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
          <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= food.name%></td>
          <td scope="row"><%= food.measurement_unit%></td>
          <td scope="row">$<%= food.price%></td>
          <td scope="row"><%= food.quantity%></td>
          
          <td scope="row">
              <%= button_to "Delete", food_path(food.id), method: :delete%>
          </td>
        </tr> 
  <% end %>
</tbody>
</table>
</div>
<button class="text-sm bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full mt-2">
<%= link_to "Add new food", new_food_path %>
</button>
</div>