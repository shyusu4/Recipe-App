<h1>My foods</h1>
<div>
<table>
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @foods.includes(:user).each do |food| %>
        <tr id="<%= food %>">
          <td><%= food.name%></td>
          <td><%= food.measurement_unit%></td>
          <td>$<%= food.price%></td>
          <td><%= food.quantity%></td>
          
          <td>
              <%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn delete-btn" %>
          
          </td>
        </tr> 
  <% end %>
</tbody>
</table>

<%= link_to "Add new food", new_food_path %>

</div>
